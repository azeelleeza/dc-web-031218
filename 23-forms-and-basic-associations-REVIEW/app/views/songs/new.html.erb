<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <!-- <input id="song_title" type="text" name="song[title]" value=""> -->
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>

  <%= f.label :genre %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <!-- collection_select(method, collection, value_method, text_method, options = {}, html_options = {}) -->
  <br>

  <p>Note: <input id="song_notes_1" type="text" name="song[note_contents][]"></p>
  <p>Note: <input id="song_notes_2" type="text" name="song[note_contents][]"></p>

  <%= f.submit %>
<% end %>
